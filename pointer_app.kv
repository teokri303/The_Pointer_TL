                rgba: .975 , .485 , .255 , .85
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id : info_layout
            map_opp : map_opp
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: .975 , .485 , .255 , .85
                Rectangle:
                    pos: self.pos
                    size: self.size
            MapOptions:
                id : map_opp
                size_hint:  (1,.1)
        Control_Buttons :
            id : options_layout
